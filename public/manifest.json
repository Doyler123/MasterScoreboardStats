{
  "name": "Master Scoreboard Stats",
  "version": "1.0",
  "description": "Stats based on Master Scoreboards scorces page.",
  "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
      "scripts": ["./chrome_extension/background.js"],
      "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "./chrome_extension/images/get_started16.png",
      "32": "./chrome_extension/images/get_started32.png",
      "48": "./chrome_extension/images/get_started48.png",
      "128": "./chrome_extension/images/get_started128.png"
    }
  },
  "content_scripts": [
      {
          "matches": [
              "https://www.masterscoreboard.co.uk/results/PlayerScores.php*"
            ],
          "js": ["./chrome_extension/contentScript.js"]
      }
  ],
  "icons": {
    "16": "./chrome_extension/images/get_started16.png",
    "32": "./chrome_extension/images/get_started32.png",
    "48": "./chrome_extension/images/get_started48.png",
    "128": "./chrome_extension/images/get_started128.png"
  },
  "manifest_version": 2
}